<UserControl
    x:Class="DijkstraVisualization.Views.GraphView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="GraphVisual">

    <Canvas
        x:Name="DrawCanvas"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="White"
        PreviewMouseDown="DrawCanvas_PreviewMouseDown"
        PreviewMouseMove="DrawCanvas_PreviewMouseMove">

        <Line
            x:Name="ConnectionArrow"
            Stroke="LimeGreen"
            StrokeDashArray="4 4 4 4"
            StrokeThickness="0.6" />
    </Canvas>
</UserControl>
